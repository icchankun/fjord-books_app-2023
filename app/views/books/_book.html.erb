<div id="<%= dom_id book %>">
  <p>
    <strong><%= book_attribute('title') %>:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong><%= book_attribute('memo') %>:</strong>
    <%= book.memo %>
  </p>

  <p>
    <strong><%= book_attribute('author') %>:</strong>
    <%= book.author %>
  </p>

  <p>
    <strong><%= book_attribute('picture') %>:</strong>
    <%= image_tag(book.picture_url) if book.picture.present? %>
  </p>

</div>
